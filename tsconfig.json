{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "noImplicitReturns": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noImplicitThis": false,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": false,

        "paths": {
            "@utils/*": ["./utils/*"],
            "@scripts/*": ["./src/scripts/*"],
            "@constant/*": ["./constants/*"]
        }
    }
}
